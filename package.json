{
  "name": "express-canvas-demo",
  "version": "1.0.0",
  "description": "A bubble canvas demo.",
  "main": "server.js",
  "author": "Eddie Naff",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "colors": "^1.4.0",
    "drive-db": "^6.0.1",
    "ejs": "^3.1.5",
    "eslint": "^7.10.0",
    "express": "^4.17.1",
    "os": "^0.1.1",
    "server": "^1.0.30"
  },
  "scripts": {
    "start": "yarn build && node dist/server.js",
    "build": "tsc -p ./",
    "build-client": "tsc -p ./src/client",
    "lint": "eslint . --ext .ts",
    "test": "jest --coverage --forceExit"
  },
  "devDependencies": {
    "@types/ejs": "^3.0.4",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "csstype": "^3.0.3",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript"
    ],
    "rules": {
      "no-console": "error"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    }
  }
}
